.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  /* keep the header above most page chrome */
  z-index: 1100;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
}

.navbar {
  width: 100%;
  height: 70px;
}

.nav-container {
  max-width: 1200px;
  height: 100%;
  margin: 0 auto;
  padding: 0 2rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-logo {
  display: flex;
  align-items: center;
  gap: 8px;
}

.nav-logo span {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary-color);
}

.nav-logo-dot {
  width: 8px;
  height: 8px;
  background-color: var(--primary-color);
  border-radius: 50%;
}

.nav-menu {
  display: flex;
  gap: 2rem;
  margin: 0;
  padding: 0;
  list-style: none;
}

.nav-link {
  color: var(--text-dark);
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  transition: all 0.3s ease;
  cursor: pointer;
}

.nav-link:hover {
  color: var(--primary-color);
  background: rgba(124, 58, 237, 0.1);
}

.nav-hamburger {
  display: none;
  flex-direction: column;
  justify-content: space-between;
  width: 30px;
  height: 20px;
  cursor: pointer;
  padding: 0;
  /* make sure the hamburger sits above the mobile menu so taps always reach it */
  position: relative;
  z-index: 1120;
}

/* overlay behind the menu (clicking it closes the menu via App.tsx) */
.nav-overlay {
  position: fixed;
  inset: 0;
  background: rgba(124,58,237,0.06);
  z-index: 1080; /* below header and hamburger */
}

.nav-hamburger span {
  display: block;
  width: 100%;
  height: 2px;
  background: var(--primary-color);
  transition: all 0.3s ease;
}

@media (max-width: 768px) {
  .nav-hamburger {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 20px;
    margin-left: auto;
    cursor: pointer;
    z-index: 1120;
    padding: 4px 0;
  }

  .nav-hamburger span {
    display: block;
    width: 100%;
    height: 2px;
    background: var(--primary-color);
    border-radius: 2px;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .nav-hamburger.active span:first-child {
    transform: translateY(7px) rotate(45deg);
  }

  .nav-hamburger.active span:nth-child(2) {
    opacity: 0;
    transform: translateX(-10px);
  }

  .nav-hamburger.active span:last-child {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Container for menu positioning */
  .nav-menu-container {
    position: absolute;
    top: 100%;
    right: 0;
    margin-right: 1rem;
  }

  /* Mobile menu styles */
  .nav-menu {
    position: absolute;
    top: 0;
    right: -280px; /* start off-screen */
    width: 280px;
    max-height: calc(100vh - 80px);
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 1rem 0;
    transition: right 0.3s ease;
    z-index: 1110;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    border-radius: 12px;
    overflow-y: auto;
  }

  .nav-menu.active {
    right: 0;
  }

  .nav-menu li {
    width: 100%;
    padding: 0 1rem;
  }

  .nav-link {
    font-size: 1.125rem;
    padding: 0.75rem 1rem;
    display: block;
    text-align: left;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    background: rgba(124, 58, 237, 0.08);
    color: var(--primary-color);
  }

  /* Overlay background when menu is open */
  .nav-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.2);
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s ease;
    z-index: 1105;
    cursor: pointer;
  }

  .nav-overlay.active {
    opacity: 1;
    visibility: visible;
  }
}
}